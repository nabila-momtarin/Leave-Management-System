{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs",
    "target": "es6",
     "types": ["node"],

    "moduleResolution": "node",

   // "forceConsistentCasingInFileNames": true,

    // "esModuleInterop": true,

    "strict": true,

    //compilerOptions:
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "esModuleInterop": true,
     "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 
